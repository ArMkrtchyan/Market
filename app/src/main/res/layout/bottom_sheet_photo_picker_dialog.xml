<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <variable
            name="keys"
            type="com.armboldmind.grandmarket.data.models.entity.Keys" />

        <variable
            name="isSelected"
            type="Boolean" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/view_size_3">


        <TextView
            android:id="@+id/from_gallery"
            style="?attr/Bold18BlackStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_size_4"
            android:paddingStart="@dimen/view_size_3"
            android:paddingTop="@dimen/view_size_1"
            android:paddingEnd="@dimen/view_size_3"
            android:paddingBottom="@dimen/view_size_1"
            android:text='@{keys.choose_from_gallery, default = @string/choose_from_gallery }'
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/from_camera"
            style="?attr/Bold18BlackStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/view_size_3"
            android:paddingTop="@dimen/view_size_1"
            android:paddingEnd="@dimen/view_size_3"
            android:paddingBottom="@dimen/view_size_1"
            android:text='@{keys.take_a_photo, default = @string/take_a_photo }'
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/delete_photo"
            style="?attr/Bold18BlackStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/view_size_3"
            android:paddingTop="@dimen/view_size_1"
            android:paddingEnd="@dimen/view_size_3"
            android:paddingBottom="@dimen/view_size_1"
            android:text='@{keys.delete_photo, default = @string/delete_photo }'
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>